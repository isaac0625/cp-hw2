doctype html
html
    head
        title Login
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css", integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh", crossorigin="anonymous")
        link(rel="stylesheet", href="css/main.css")
    body
        form(action="/addmember", method="post")
            div.form-group
                label(for="inputUsername") Name
                input#inputUsername.form-control(type="text", aria-describedby="usernameHelp", name="name", required)
            div.form-group
                label(for="inputEmail") E-mail
                input#inputEmail.form-control(type="email", name="email", required)
            div.form-row
                div.form-group.col-md-6
                    label(for="inputAge") Age
                    input#inputAge.form-control(type="number", name="age", value="0", required)
                div.form-group.col-md-6
                    label(for="inputSex") Gender
                    select#inputSex.form-control(name="sex")
                        option(value="M") Male
                        option(value="F") Female
            button.btn.btn-success(type="submit") Sign-up
        script(src="https://code.jquery.com/jquery-3.5.0.min.js")
        script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js", integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo", crossorigin="anonymous")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js", integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6", crossorigin="anonymous")
        script(src="js/main.js")